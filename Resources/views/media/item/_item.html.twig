<div class="media-container col-6 col-md-4 col-lg-3" data-paginator-item-id="{{ user_media.slug }}">
    <a class="media-link user-media-show" href="{{ path('member_media',
        {
            'slug': user_media.createdBy.slug,
            '_token': user_media.token,
        }
    ) }}">
        {{ include('@UserMedia/media/item/_item_media.html.twig',
            {
                'user_media': user_media,
            },
            with_context = false
        ) }}
    </a>
    {{ include('@UserMedia/media/item/_item_control.html.twig',
        {
            'user_media': user_media,
        },
        with_context = true
    ) }}
    {% if
        false == user_media.media.isImage
            and
        (
            resize is defined and true == resize
                or
            resize is not defined
        )
    %}
        <div class="control-video-play">
            <i class="fas fa-play-circle"></i>
        </div>
    {% endif %}
</div>